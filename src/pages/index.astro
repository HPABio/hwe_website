---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import AtAGlance from '../components/AtAGlance.astro';
import Tours from '../components/Tours.astro';
import AboutMe from '../components/AboutMe.astro';
import Region from '../components/Region.astro';
import GetInTouch from '../components/GetInTouch.astro';
import Footer from '../components/Footer.astro';
// Component Imports
import Button from '../components/Button.astro';
import ScreenSizeDEVTOOL from '../components/ScreenSizeDEVTOOL.astro';

import mjVineYard from '../public/mj-vineYard-V1.png';

// Full Astro Component Syntax:
// https://docs.astro.build/basics/astro-components/
---

<html lang="de">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>Brigitta Heyl – Geführte Wein-Erlebnistouren</title>
		<!-- Google Fonts for Playfair Display, Cormorant Garamond, Inter, Source Sans Pro -->

		<link href="https://fonts.googleapis.com/css2?family=Bodoni+Moda:ital,opsz,wght@0,6..96,400..900;1,6..96,400..900&family=Meie+Script&display=swap" rel="stylesheet">
		<!-- <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Cormorant+Garamond:wght@700&family=Inter:wght@400;700&family=Source+Sans+Pro:wght@400;700&display=swap" rel="stylesheet"> -->
		<style>
			body { font-family: 'Inter', 'Source Sans Pro', sans-serif; }
			h1, h2 { font-family: 'Bodoni Moda', serif; }
			h3, h4, h5, h6 { font-family: 'Meie Script', cursive; }
		</style>
	</head>

	<body class="bg-background text-text min-h-screen">
		<ScreenSizeDEVTOOL />
		<Header />
		<main>
			<Hero />
			<AtAGlance />
			<Tours />
			<AboutMe />
			<Region />
			<GetInTouch />
		</main>
		<Footer />
	</body>
</html>
