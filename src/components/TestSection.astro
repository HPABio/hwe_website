---
import WaterColorReveal from './WaterColorReveal.tsx';  
---

<!-- src/components/TestSection.astro -->
<!-- Purpose: Alternating image/text sections with watercolor reveal effect tied to scroll progress -->

<section class="w-full flex flex-col gap-24 bg-white px-12 relative pb-[450px]">
  <div class="inset-0 absolute mix-blend-darken bg-gradient-to-b from-white to-transparent z-0"
  style={{
    backgroundImage: `url(/GimmeldingenMap.jpg)`,
    backgroundSize: 'cover',
    backgroundPosition: 'center',
    backgroundRepeat: 'no-repeat',
    opacity: 0.2,
    willChange: 'transform',
  }}/>
  <div class="w-full top-0 left-0 h-1/4 absolute bg-gradient-to-b from-white via-white/20 to-transparent z-0"/>
  <!-- Section 1: Image Right, Text Left -->
  <div class="inset-0 relative z-10">
    <div class="flex flex-col md:flex-row items-center justify-between gap-4 xl:gap-12 w-full max-w-6xl mx-auto">
      <div class="flex-1 order-2 md:order-1 min-w-[320px]">
        <h2 class="text-3xl font-bold mb-4 font-cormorant">
          <span class="text-gradient-gold">
            Section One Title (cormorant)
          </span>
        </h2>
        <p class="text-lg text-gray-700 mb-6">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque euismod, urna eu tincidunt consectetur, nisi nisl aliquam nunc, eget aliquam massa nisl quis neque.</p>
      </div>
      <div class="flex-1 order-1 md:order-2 flex justify-center items-center relative
      ">
        <WaterColorReveal client:visible id="section-1" width={500} height={500}
        className="h-[500px] aspect-square absolute md:top-[50%] md:translate-y-[-25%] rounded-full overflow-hidden drop-shadow-[2px_3px_15px_rgba(0,0,0,0.5)]"
        >
          <img src="/mj-vineYard-V1.png" alt="Section 1" class="object-cover w-full h-full rounded-xl shadow-lg" />
        </WaterColorReveal>
      </div>
    </div>
  
    <!-- Section 2: Image Left, Text Right -->
    <div class="flex flex-col md:flex-row items-center justify-between gap-4 xl:gap-12 w-full max-w-6xl mx-auto">
      <div class="flex-1 order-2 md:order-2">
        <h2 class="text-3xl font-bold mb-4 font-bonanova text-gradient-gold">
            Section Two Title (bonanova)
        </h2>
        <p class="text-lg text-gray-700 mb-6">Suspendisse potenti. Etiam ac mauris lectus. Integer non erat nec nulla cursus ullamcorper. Proin nec facilisis erat.</p>
      </div>
      <div class="flex-1 order-1 md:order-1 flex justify-center">
        <WaterColorReveal client:visible id="section-2" width={400} height={400} className="drop-shadow-[0_0_15px_rgba(0,0,0,0.2)] h-[400px] aspect-square rounded-full overflow-hidden">
          <img src="/mj-vineYard-V1.png" alt="Section 2" class="object-cover w-full h-full rounded-xl shadow-lg" />
        </WaterColorReveal>
      </div>
    </div>
  
    <!-- Section 3: Image Right, Text Left -->
    <div class="flex flex-col md:flex-row items-center justify-between gap-4 xl:gap-12 w-full max-w-6xl mx-auto">
      <div class="flex-1 order-2 md:order-1">
        <h2 class="text-3xl font-bold mb-4 font-dmserifdisplay text-gradient-gold">
            Section Three Title (dmserifdisplay)
        </h2>
        <p class="text-lg text-gray-700 mb-6">Curabitur euismod, urna eu tincidunt consectetur, nisi nisl aliquam nunc, eget aliquam massa nisl quis neque.</p>
      </div>
      <div class="flex-1 order-1 md:order-2 flex justify-center ">
        <WaterColorReveal client:visible id="section-3" width={600} height={600} className="h-[600px] aspect-square rounded-full overflow-hidden drop-shadow-[0_0_15px_rgba(0,0,0,0.2)]">
          <img src="/mj-vineYard-V1.png" alt="Section 3" class="object-cover w-full h-full rounded-xl shadow-lg" />
        </WaterColorReveal>
      </div>
    </div>
  
    <!-- Section 4: Image Left, Text Right -->
    <div class="flex flex-col md:flex-row items-center justify-between gap-4 xl:gap-12 w-full max-w-6xl mx-auto">
      <div class="flex-1 order-2 md:order-2">
        <h2 class="text-3xl font-bold mb-4 font-gloock text-gradient-gold">
            Section Four Title (gloock)
        </h2>
        <p class="text-lg text-gray-700 mb-6">Phasellus euismod, urna eu tincidunt consectetur, nisi nisl aliquam nunc, eget aliquam massa nisl quis neque.</p>
      </div>
      <div class="flex-1 order-1 md:order-1 flex justify-center">
        <WaterColorReveal client:visible id="section-4" width={300} height={300} className="h-[300px] aspect-square rounded-full overflow-hidden drop-shadow-[0_0_15px_rgba(0,0,0,0.2)]">
          <img src="/mj-vineYard-V1.png" alt="Section 4" class="object-cover w-full h-full rounded-xl shadow-lg" />
        </WaterColorReveal>
      </div>
    </div>
  </div>
</section>
